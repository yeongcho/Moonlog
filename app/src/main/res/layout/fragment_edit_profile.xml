<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#CEC8BB"
    android:padding="20dp"
    android:clipToPadding="false">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="50dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_rounded_white"
            android:padding="25dp"
            android:elevation="2dp"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:layout_marginBottom="30dp">

            <ImageView
                android:id="@+id/iv_bookmark"
                android:layout_width="40dp"
                android:layout_height="25dp"
                android:src="@drawable/ic_bookmark"
                app:tint="#8C857B"
                android:layout_marginStart="5dp"
                android:layout_marginTop="-35dp"
                android:elevation="6dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/iv_current_profile"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:src="@drawable/ic_icon_profile"
                android:background="@drawable/bg_circle_gray"
                android:padding="2dp"
                android:layout_marginTop="5dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="25dp"
                app:layout_constraintStart_toEndOf="@id/iv_current_profile"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/iv_current_profile"
                app:layout_constraintBottom_toBottomOf="@id/iv_current_profile">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="닉네임"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:fontFamily="@font/handwriting_font"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="example@swu.ac.kr"
                    android:textSize="14sp"
                    android:textColor="@color/gray_600"
                    android:fontFamily="@font/handwriting_font"
                    android:layout_marginTop="2dp"/>

                <TextView
                    android:id="@+id/tv_current_badge_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="감정 로그 수집가"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:textColor="#5D7663"
                    android:fontFamily="@font/handwriting_font"
                    android:layout_marginTop="12dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="나와 마주한 지 D+127일 째"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:textColor="#666666"
                    android:fontFamily="@font/handwriting_font"
                    android:layout_marginTop="3dp"/>
            </LinearLayout>

            <ImageView
                android:id="@+id/iv_current_badge_img"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:src="@drawable/ic_badge_emotion_log"
                android:elevation="5dp"
                app:layout_constraintBottom_toBottomOf="@id/iv_current_profile"
                app:layout_constraintEnd_toEndOf="@id/iv_current_profile"
                app:layout_constraintStart_toStartOf="@id/iv_current_profile"
                app:layout_constraintTop_toTopOf="@id/iv_current_profile" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_rounded_white"
            android:orientation="vertical"
            android:padding="20dp"
            android:elevation="2dp">

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="2"
                android:rowCount="3"
                android:alignmentMode="alignMargins">

                <LinearLayout
                    android:id="@+id/layout_badge_1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="10dp"
                    android:layout_marginBottom="20dp">
                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:src="@drawable/ic_badge_start"/>
                        <ImageView
                            android:id="@+id/iv_check_1"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@android:drawable/checkbox_on_background"
                            app:tint="#5D7663"
                            android:layout_gravity="top|end"
                            android:visibility="gone"/>
                    </FrameLayout>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="시작과 꾸준함"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:layout_marginTop="8dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="첫 번째 일기 작성"
                        android:textSize="12sp"
                        android:textColor="@color/gray_600"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layout_badge_2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="10dp"
                    android:layout_marginBottom="20dp">
                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:src="@drawable/ic_badge_three_days"/>
                        <ImageView
                            android:id="@+id/iv_check_2"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@android:drawable/checkbox_on_background"
                            app:tint="#5D7663"
                            android:layout_gravity="top|end"
                            android:visibility="gone"/>
                    </FrameLayout>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="작심삼일 마스터"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:layout_marginTop="8dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="3일 연속 일기 작성"
                        android:textSize="12sp"
                        android:textColor="@color/gray_600"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layout_badge_3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="10dp"
                    android:layout_marginBottom="20dp">
                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:src="@drawable/ic_badge_month"/>
                        <ImageView
                            android:id="@+id/iv_check_3"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@android:drawable/checkbox_on_background"
                            app:tint="#5D7663"
                            android:layout_gravity="top|end"
                            android:visibility="gone"/>
                    </FrameLayout>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="한 달의 조각들"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:layout_marginTop="8dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="누적 일기 30개 작성"
                        android:textSize="12sp"
                        android:textColor="@color/gray_600"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layout_badge_4"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="10dp"
                    android:layout_marginBottom="20dp">
                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:src="@drawable/ic_badge_traveler"/>
                        <ImageView
                            android:id="@+id/iv_check_4"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@android:drawable/checkbox_on_background"
                            app:tint="#5D7663"
                            android:layout_gravity="top|end"
                            android:visibility="gone"/>
                    </FrameLayout>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="돌아온 여행자"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:layout_marginTop="8dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="어플을 오래 비우다..."
                        android:textSize="12sp"
                        android:textColor="@color/gray_600"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layout_badge_5"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="10dp"
                    android:layout_marginBottom="20dp">
                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:src="@drawable/ic_badge_emotion_log"/>
                        <ImageView
                            android:id="@+id/iv_check_5"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@android:drawable/checkbox_on_background"
                            app:tint="#5D7663"
                            android:layout_gravity="top|end"
                            android:visibility="gone"/>
                    </FrameLayout>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="감정 로그 수집가"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:layout_marginTop="8dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="누적 일기 100개 작성"
                        android:textSize="12sp"
                        android:textColor="@color/gray_600"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layout_badge_6"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="10dp"
                    android:layout_marginBottom="20dp">
                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:src="@drawable/ic_badge_wine"/>
                        <ImageView
                            android:id="@+id/iv_check_6"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@android:drawable/checkbox_on_background"
                            app:tint="#5D7663"
                            android:layout_gravity="top|end"
                            android:visibility="gone"/>
                    </FrameLayout>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="감정 소믈리에"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:layout_marginTop="8dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="모든 종류의 감정 태그"
                        android:textSize="12sp"
                        android:textColor="@color/gray_600"/>
                </LinearLayout>

            </GridLayout>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_save_badge"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="프로필 배지 지정하기"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:fontFamily="@font/handwriting_font"
                android:background="@drawable/bg_rounded_white"
                android:backgroundTint="#9E8F88"
                android:layout_marginTop="20dp"
                android:padding="12dp"/>

        </LinearLayout>
    </LinearLayout>
</ScrollView>