<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#AECFB8">

    <LinearLayout
        android:id="@+id/layout_top_tabs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/btn_tab_summary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="요약"
            android:textColor="#802E4E3F"
            android:textSize="18sp"
            android:padding="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="캘린더"
            android:textStyle="bold"
            android:textColor="#2E4E3F"
            android:textSize="18sp"
            android:padding="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="리스트"
            android:textColor="#802E4E3F"
            android:textSize="18sp"
            android:padding="10dp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_month_control"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@id/layout_top_tabs"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/btn_prev_month"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:text="&lt;"
            android:textSize="24sp"
            android:textColor="#2E4E3F"
            android:gravity="center"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:layout_marginEnd="10dp"/>

        <ImageView
            android:id="@+id/iv_month_title"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:src="@drawable/img_month_1"/>

        <TextView
            android:id="@+id/btn_next_month"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:text="&gt;"
            android:textSize="24sp"
            android:textColor="#2E4E3F"
            android:gravity="center"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:layout_marginStart="10dp"/>
    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/card_calendar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="10dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="0dp"
        app:cardBackgroundColor="#FFFFFF"
        app:layout_constraintTop_toBottomOf="@id/layout_month_control">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp">

            <CalendarView
                android:id="@+id/calendarView"
                android:layout_width="match_parent"
                android:layout_height="350dp" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tv_graph_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="월간 마음 그래프"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#3E5F4E"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/card_calendar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="-30dp"
        android:background="@drawable/bg_rounded_top_white"
        app:layout_constraintTop_toBottomOf="@id/tv_graph_title"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>