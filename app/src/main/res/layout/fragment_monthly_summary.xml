<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#AECFB8">

    <LinearLayout
        android:id="@+id/layout_top_tabs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="요약"
            android:textStyle="bold"
            android:textColor="#2E4E3F"
            android:textSize="18sp"
            android:padding="10dp"/>
        <TextView
            android:id="@+id/btn_tab_calendar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="캘린더"
            android:textColor="#802E4E3F"
            android:textSize="18sp"
            android:padding="10dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="리스트"
            android:textColor="#802E4E3F"
            android:textSize="18sp"
            android:padding="10dp"/>
    </LinearLayout>

    <ScrollView
        android:id="@+id/scrollViewContent"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/layout_top_tabs"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:paddingBottom="50dp">

            <ImageView
                android:id="@+id/iv_month_title"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@drawable/img_month_1"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"/>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="24dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="#B3FFFFFF"
                app:strokeColor="#FFFFFF"
                app:strokeWidth="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="24dp"
                    android:gravity="center_horizontal">

                    <TextView
                        android:id="@+id/tv_summary_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1월 월간 요약"
                        android:textSize="22sp"
                        android:textStyle="bold"
                        android:textColor="#5A8F7B"
                        android:layout_marginBottom="16dp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_rounded_dark_green"
                        android:padding="16dp"
                        android:gravity="center">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="바쁘고 지친 날도 있었지만, 좋아하는 순간들로 다시 힘을 낸 한 달이에요."
                            android:textColor="#FFFFFF"
                            android:textSize="14sp"
                            android:textAlignment="center"
                            android:textStyle="bold"/>
                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="좋아하는 영화를 보면서 기분이 환해진 날도 있었고...\n(여기에 긴 요약 내용이 들어갑니다)\n전체적으로 흔들리긴 해도 회복하려는 힘이 보였어요."
                        android:textColor="#333333"
                        android:textSize="14sp"
                        android:lineSpacingExtra="6dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="20dp"/>

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@android:drawable/btn_star_big_on"
                        app:tint="#3E5F4E"
                        android:layout_marginBottom="20dp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_rounded_gray"
                        android:orientation="vertical"
                        android:padding="16dp"
                        android:gravity="center">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:layout_marginBottom="5dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="이번 달엔 "
                                android:textStyle="bold"
                                android:textColor="#000000"
                                android:textSize="15sp"/>

                            <TextView
                                android:id="@+id/tv_most_emotion"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="평온"
                                android:textStyle="bold"
                                android:textColor="#5A8F7B"
                                android:textSize="15sp"/>

                            <ImageView
                                android:id="@+id/iv_most_emotion"
                                android:layout_width="22dp"
                                android:layout_height="22dp"
                                android:src="@drawable/emotion_calm"
                                android:layout_marginHorizontal="4dp"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="이 가장 자주 나왔어요."
                                android:textStyle="bold"
                                android:textColor="#000000"
                                android:textSize="15sp"/>
                        </LinearLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="'안정 → 지침 → 회복' 흐름이 주로 반복되었어요."
                            android:textSize="13sp"
                            android:textColor="#555555"
                            android:layout_marginBottom="15dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="이번 달 주요 키워드"
                            android:textSize="12sp"
                            android:textColor="#888888"
                            android:layout_marginBottom="8dp"/>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="휴식"
                                android:background="@drawable/bg_rounded_pill_gray"
                                android:paddingHorizontal="16dp"
                                android:paddingVertical="6dp"
                                android:textColor="#FFFFFF"
                                android:layout_marginEnd="8dp"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="재정비"
                                android:background="@drawable/bg_rounded_pill_gray"
                                android:paddingHorizontal="16dp"
                                android:paddingVertical="6dp"
                                android:textColor="#FFFFFF"
                                android:layout_marginEnd="8dp"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="회복"
                                android:background="@drawable/bg_rounded_pill_gray"
                                android:paddingHorizontal="16dp"
                                android:paddingVertical="6dp"
                                android:textColor="#FFFFFF"/>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>
    </ScrollView>

    <TextView
        android:id="@+id/tv_empty_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2월 요약이 아직 작성되지 않았어요.\n일기를 더 써보세요!"
        android:textColor="#5A8F7B"
        android:textSize="18sp"
        android:textAlignment="center"
        android:lineSpacingExtra="8dp"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>