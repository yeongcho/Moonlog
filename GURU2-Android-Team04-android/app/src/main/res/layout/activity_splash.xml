<!--
Figma: 스플래시 화면 (Splash Screen)
설명: 앱 실행 시 가장 먼저 보이는 초기 화면
구성: 달 이미지 + 서브 텍스트 ("당신의 오늘을 가볍게 남겨보세요")
용도: 앱 로딩 중 표시되며, 일정 시간 후 자동으로 다음 화면으로 전환
-->
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_start">

    <!-- 로고 이미지 -->
    <ImageView
        android:id="@+id/tv_logo"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_marginTop="150dp"
        android:contentDescription="mascot"
        android:src="@drawable/img_start_cat"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- 서브 텍스트 -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="당신의 오늘을\n가볍게 남겨보세요"
        android:textSize="23sp"
        android:textColor="@color/white"
        android:gravity="center"
        android:fontFamily="@font/nanumsquare_ac_r"
        android:layout_marginTop="-20dp"
        app:layout_constraintTop_toBottomOf="@id/tv_logo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>