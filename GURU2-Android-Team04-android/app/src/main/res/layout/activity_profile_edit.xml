<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#CAC1AE"
    android:padding="20dp"
    android:clipToPadding="false"
    android:fillViewport="true">

    <!--
        Figma: 프로필 편집하기 화면(activity_profile_edit.xml) (진행순서 18)
        설명 : 사용자가 프로필 이미지 / 닉네임를 수정하고 저장하는 화면
        구성:
          - 상단 책갈피(장식)
          - 프로필 카드
            - 프로필 이미지(수정/선택 가능)
            - 닉네임 변경 가능
            - 이메일/대표 배지명/D-day 정보 표시
            - 대표 배지 프레임(현재 적용된 배지 표시)
          - 프로필 저장하기 버튼
            - 저장 처리 후 마이페이지 화면으로 이동
    -->

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipChildren="false"
        android:clipToPadding="false">

        <!-- 상단 책갈피(장식) -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/view_bookmark"
            android:layout_width="35dp"
            android:layout_height="20dp"
            android:layout_marginTop="230dp"
            android:layout_marginStart="20dp"
            android:layout_gravity="top|start"
            app:cardCornerRadius="4dp"
            app:cardElevation="6dp"
            app:cardBackgroundColor="#7C6969" />

        <!-- 본문 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="50dp"
            android:paddingBottom="50dp"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:layout_gravity="center">

            <!-- 프로필 카드 -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layout_profile_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_rounded_white"
                android:padding="25dp"
                android:elevation="2dp"
                android:clipChildren="false"
                android:clipToPadding="false">

                <!-- 프로필 이미지 -->
                <!-- 클릭 시 기기 내 갤러리에서 프로필 이미지 설정 가능-->
                <ImageView
                    android:id="@+id/iv_profile_image"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/ic_icon_profile"
                    android:background="@drawable/bg_circle_gray"
                    app:tint="#DEDEDE"
                    android:padding="2dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:elevation="2dp"
                    android:layout_marginTop="10dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <!-- 프로필 텍스트 정보 -->
                <LinearLayout
                    android:id="@+id/layout_member_info"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginStart="30dp"
                    android:visibility="visible"
                    app:layout_constraintStart_toEndOf="@id/iv_profile_image"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@id/iv_profile_image"
                    app:layout_constraintBottom_toBottomOf="@id/iv_profile_image">

                    <!-- 닉네임 -->
                    <!-- 클릭 시 EditText로 바꾸어서 닉네임 변경 가능 -->
                    <TextView
                        android:id="@+id/tv_nickname"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="닉네임"
                        android:textSize="22sp"
                        android:textColor="#000000"
                        android:fontFamily="@font/nanumsquare_eb"
                        android:clickable="true"
                        android:focusable="true" />

                    <!-- 이메일 -->
                    <TextView
                        android:id="@+id/tv_email"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="example@swu.ac.kr"
                        android:textSize="14sp"
                        android:textColor="#9A9A9A"
                        android:fontFamily="@font/nanumsquare_r"
                        android:layout_marginTop="2dp" />

                    <!-- 대표 배지 이름(현재 적용된 배지 표시) -->
                    <TextView
                        android:id="@+id/tv_badge_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="감정 로그 수집가"
                        android:textSize="15sp"
                        android:textColor="#68A684"
                        android:fontFamily="@font/nanumsquare_r"
                        android:layout_marginTop="12dp" />

                    <!-- D-day -->
                    <TextView
                        android:id="@+id/tv_d_day"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="나와 마주한 지 D+127일 째"
                        android:textSize="15sp"
                        android:textColor="#565656"
                        android:fontFamily="@font/nanumsquare_r"
                        android:layout_marginTop="3dp" />
                </LinearLayout>

                <!-- 프로필 이미지 위에 표시되는 대표 배지 프레임 -->
                <ImageView
                    android:id="@+id/iv_badge_frame_mypage"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/ic_badge_emotion_log"
                    android:elevation="5dp"
                    app:layout_constraintBottom_toBottomOf="@id/iv_profile_image"
                    app:layout_constraintEnd_toEndOf="@id/iv_profile_image"
                    app:layout_constraintStart_toStartOf="@id/iv_profile_image"
                    app:layout_constraintTop_toTopOf="@id/iv_profile_image" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <!-- 프로필 저장 버튼 -->
            <!-- 클릭 시 저장 처리 후 마이페이지(activity_mypage.xml)로 이동 -->
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_save_profile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="프로필 저장하기"
                android:textSize="18sp"
                android:textColor="#FFFFFF"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/nanumsquare_eb"
                android:background="@drawable/bg_rounded_white"
                android:backgroundTint="#9C8882"
                android:padding="12dp" />

        </LinearLayout>

    </FrameLayout>

</ScrollView>
