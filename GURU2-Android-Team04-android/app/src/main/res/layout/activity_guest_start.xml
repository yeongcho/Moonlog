<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:padding="24dp">

    <!-- 뒤로가기 버튼 -->
    <ImageButton
        android:id="@+id/btn_back"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="뒤로가기"
        android:src="@android:drawable/ic_menu_close_clear_cancel"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- 중앙 콘텐츠 그룹 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- 안내 아이콘 -->
        <ImageView
            android:id="@+id/iv_info_icon"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:contentDescription="정보"
            android:src="@android:drawable/ic_dialog_info"
            android:tint="@color/primary_green" />

        <!-- 제목 -->
        <TextView
            android:id="@+id/tv_guest_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/guest_title"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginTop="24dp"
            android:textAlignment="center" />

        <!-- 안내 문구 카드 -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp"
            app:cardBackgroundColor="@color/white">

            <TextView
                android:id="@+id/tv_guest_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/guest_info"
                android:textSize="16sp"
                android:textColor="@color/gray_600"
                android:lineSpacingMultiplier="1.5"
                android:padding="24dp" />

        </androidx.cardview.widget.CardView>

        <!-- 비회원 시작 버튼 -->
        <Button
            android:id="@+id/btn_start_guest"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginTop="32dp"
            android:text="@string/btn_guest_start"
            android:textSize="18sp"
            android:textStyle="bold"
            android:backgroundTint="@color/primary_green"
            android:textColor="@color/white"
            android:elevation="4dp" />

        <!-- 돌아가기 텍스트 버튼 -->
        <TextView
            android:id="@+id/tv_back_to_onboarding"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/btn_back"
            android:textSize="16sp"
            android:textColor="@color/gray_600"
            android:clickable="true"
            android:focusable="true"
            android:padding="12dp"
            android:background="?attr/selectableItemBackground" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>