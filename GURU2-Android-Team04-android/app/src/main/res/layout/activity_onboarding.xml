<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_start"
    android:padding="24dp">

    <!--
        Figma: 온보딩 화면 / 회원 + 비회원 화면(activity_onboarding.xml) (진행순서 2)
        설명: 회원 / 비회원을 선택하는 화면
        구성:
          - 캐릭터 이미지
          - 환영 문구 "안녕하세요, 처음이시군요."
          - 2개의 버튼
            - 로그인/회원가입 버튼 : 로그인 화면으로 이동
            - 비회원 시작 버튼 : 홈 화면으로 바로 진입 (로그인 없이 체험 가능)
    -->

    <!-- 캐릭터 이미지 영역 -->
    <ImageView
        android:id="@+id/iv_mascot"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_marginTop="100dp"
        android:contentDescription="mascot"
        android:src="@drawable/img_start_cat"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- 안내 문구 -->
    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="-12dp"
        android:fontFamily="@font/seoulhangang_eb"
        android:text="안녕하세요, 처음이시군요."
        android:textColor="#FFFFFF"
        android:textSize="23sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_mascot" />

    <!-- 버튼 그룹 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="100dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <!-- 로그인 버튼(클릭시 로그인 화면(activity_login.xml)으로 이동) -->
        <Button
            android:id="@+id/btn_login"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:backgroundTint="#6E79DB"
            android:elevation="4dp"
            android:fontFamily="@font/nanumsquare_eb"
            android:text="로그인 / 회원가입"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            app:cornerRadius="50dp"
            app:strokeColor="#28339C"
            app:strokeWidth="0.7dp" />

        <!-- 비회원 시작 버튼(클릭시 시작화면(activity_start.xml)으로 바로 이동) -->
        <Button
            android:id="@+id/btn_guest_start"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginTop="16dp"
            android:backgroundTint="#BC4C95"
            android:elevation="4dp"
            android:fontFamily="@font/nanumsquare_eb"
            android:text="비회원 시작"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            app:cornerRadius="50dp"
            app:strokeColor="#28339C"
            app:strokeWidth="0.7dp" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
